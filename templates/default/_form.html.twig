{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ page_title }}</h1>

    {{ form_start(form) }}

    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        } %}
    {% endif %}

    <div class="mb-4">
        {{ form_widget(form) }}
    </div>

    <div class="form-group row justify-content-between">
        {% if back_to_list_path|default(false) %}
            <div class="col-auto">
                <a href="{{ url(back_to_list_path) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> {{ 'action.back_to_list'|trans }}
                </a>
            </div>
        {% endif %}
        <div class="col-auto">
            <input type="submit" value="{{ submit_label }}" class="btn btn-success"/>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
