{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.item_details'|trans({'%id%': item.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.item_details'|trans({'%id%': item.id|default('')}) }}</h1>
    {% if item is defined and item|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ item.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  item.title }}</dd>
            <dt>{{ 'label.description'|trans }}</dt>
            <dd>{{  item.description }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ item.createdAt|date('Y/m/d') }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  item.category.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('item_index') }}" class="btn btn-light" title="{{ 'action.back_to_list'|trans }}">
                <i class="bi bi-arrow-left"></i> {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.record_not_found'|trans
        } %}
    {% endif %}
{% endblock %}